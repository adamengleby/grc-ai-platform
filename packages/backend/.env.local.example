# Backend Environment Variables for Local Development

# Database Configuration
DATABASE_URL=./database/grc-platform.db
NODE_ENV=development

# JWT Configuration  
JWT_SECRET=development-jwt-secret-change-in-production

# OAuth/OIDC Configuration
OAUTH_ISSUER=https://your-tenant.b2clogin.com/your-tenant.onmicrosoft.com/v2.0/
OAUTH_AUDIENCE=api://your-saas
BYPASS_OAUTH=true

# Azure B2C Configuration
AZURE_B2C_TENANT_NAME=your-tenant-name
AZURE_B2C_CLIENT_SECRET=your-client-secret
AZURE_B2C_AUTHORITY=https://your-tenant.b2clogin.com/your-tenant.onmicrosoft.com/B2C_1_signupsignin

# Azure Key Vault (for production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-managed-identity-client-id

# MCP Server Configuration  
MCP_SERVER_URL=http://localhost:3006
MCP_SERVER_PORT=3006

# Archer GRC Configuration (for testing)
ARCHER_BASE_URL=https://demo-archer.example.com
ARCHER_INSTANCE_ID=demo-instance

# Development Overrides
ENABLE_MOCK_AUTH=true
ENABLE_DETAILED_LOGGING=true