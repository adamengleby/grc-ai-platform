    "express": "^5.1.0",
    "lru-cache": "^11.1.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
