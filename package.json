{
  "name": "grc-ai-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-Tenant SaaS Platform for AI-Powered GRC Extensions",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@grc-ai-platform/frontend",
    "dev:mcp": "npm run dev --workspace=@grc-ai-platform/mcp-server",
    "dev:event-streaming": "npm run dev --workspace=@grc-platform/event-streaming",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "test": "npm run test --workspaces",
    "test:coverage": "npm run test:coverage --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules packages/*/node_modules",
    "install:all": "npm install && npm run build --workspace=@grc-ai-platform/shared",
    "start:frontend": "npm run start --workspace=@grc-ai-platform/frontend",
    "start:mcp": "npm run start --workspace=@grc-ai-platform/mcp-server",
    "start:event-streaming": "npm run start --workspace=@grc-platform/event-streaming"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/grc-ai-platform.git"
  },
  "keywords": [
    "grc",
    "governance",
    "risk",
    "compliance",
    "multi-tenant",
    "saas",
    "ai",
    "mcp",
    "azure"
  ],
  "author": "Your Organization",
  "license": "UNLICENSED",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "pg": "^8.16.3",
    "react-markdown": "^10.1.0",
    "zod": "^4.1.1"
  }
}
