{
  "name": "production",
  "displayName": "Production Environment",
  "description": "Production environment with enterprise security and compliance",
  "version": "1.0.0",
  "lastUpdated": "2024-01-01T00:00:00Z",
  
  "application": {
    "nodeEnv": "production",
    "logLevel": "warn",
    "port": 3000,
    "enableDebugLogs": false,
    "enableHotReload": false,
    "enableSourceMaps": false
  },

  "azure": {
    "region": "australiaeast",
    "resourceGroupName": "rg-grc-ai-platform-prod",
    "environment": "prod",
    "subscription": {
      "id": "your-prod-subscription-id",
      "name": "GRC AI Platform Production"
    },
    "cosmosDb": {
      "accountName": "cosmos-grc-ai-prod",
      "databaseName": "grc-ai-platform-prod",
      "consistencyLevel": "Strong",
      "enableMultipleWriteLocations": true
    },
    "keyVault": {
      "name": "kv-grc-ai-prod",
      "enableRbacAuthorization": true,
      "enablePurgeProtection": true
    },
    "storage": {
      "accountName": "stgrcaiprod",
      "tier": "Premium",
      "replication": "GRS"
    },
    "appInsights": {
      "name": "ai-grc-ai-prod",
      "applicationType": "web",
      "samplingPercentage": 25
    }
  },

  "multiTenant": {
    "enableTenantIsolation": true,
    "defaultTier": "enterprise",
    "maxTenantsPerSubscription": 200,
    "enableAutoProvisioning": false,
    "tenantTimeoutMinutes": 120
  },

  "security": {
    "enableHelmetSecurity": true,
    "enableRateLimiting": true,
    "rateLimitWindowMs": 900000,
    "rateLimitMaxRequests": 100,
    "enableAuditLogs": true,
    "auditLogRetentionDays": 2555,
    "enableTamperEvidentLogs": true,
    "cors": {
      "origins": [
        "https://app.grc-ai-platform.com",
        "https://admin.grc-ai-platform.com"
      ],
      "credentials": true
    }
  },

  "mcp": {
    "enableHealthChecks": true,
    "healthCheckIntervalMs": 600000,
    "serverTimeoutMs": 30000,
    "enableSignatureVerification": true,
    "rateLimitPerMinute": 100,
    "allowedOrigins": [
      "https://app.grc-ai-platform.com"
    ]
  },

  "ai": {
    "defaultProvider": "azure-openai",
    "defaultModel": "gpt-4",
    "defaultMaxTokens": 4000,
    "defaultTemperature": 0.7,
    "enableContentFiltering": true,
    "enablePiiDetection": true,
    "enableBiasDetection": true,
    "enableUsageLogging": true
  },

  "caching": {
    "enableRedis": true,
    "defaultTtlSeconds": 3600,
    "maxCacheSize": 10000,
    "redis": {
      "host": "redis-grc-ai-prod.redis.cache.windows.net",
      "port": 6380,
      "database": 0,
      "enableSsl": true,
      "enableClustering": true
    }
  },

  "monitoring": {
    "enablePrometheusMetrics": true,
    "metricsPort": 9090,
    "enableOpenTelemetry": true,
    "enablePerformanceMonitoring": true,
    "slowQueryThresholdMs": 200,
    "memoryUsageThresholdPercent": 75
  },

  "testing": {
    "enableTestFixtures": false,
    "testTenantId": null,
    "enableMockServices": false,
    "testTimeoutMs": 120000
  },

  "features": {
    "enableNewTenantOnboarding": true,
    "enableAdvancedAnalytics": true,
    "enableMcpServerRegistry": true,
    "enableBulkOperations": true,
    "enableExperimentalFeatures": false
  },

  "integrations": {
    "webhook": {
      "timeoutMs": 30000,
      "retryAttempts": 5,
      "enableSignatureVerification": true
    },
    "externalApi": {
      "rateLimitPerMinute": 100,
      "timeoutMs": 30000
    }
  },

  "backup": {
    "enabled": true,
    "frequency": "hourly",
    "retentionDays": 365,
    "enableGeoReplication": true
  },

  "compliance": {
    "frameworks": ["ISO27001", "SOC2", "CPS230"],
    "enableGdprCompliance": true,
    "enableCcpaCompliance": true,
    "dataResidencyRegion": "australia-east",
    "encryptionAtRest": true,
    "encryptionInTransit": true,
    "enableDlpPolicies": true
  },

  "performance": {
    "enableAutoScaling": true,
    "minInstances": 2,
    "maxInstances": 10,
    "cpuThresholdPercent": 70,
    "memoryThresholdPercent": 80,
    "enableCdn": true
  },

  "alerts": {
    "enableEmail": true,
    "enableSms": true,
    "enableWebhook": true,
    "alertChannels": [
      "admin@grc-ai-platform.com",
      "security@grc-ai-platform.com",
      "operations@grc-ai-platform.com"
    ]
  }
}