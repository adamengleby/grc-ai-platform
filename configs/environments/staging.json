{
  "name": "staging",
  "displayName": "Staging Environment",
  "description": "Pre-production staging environment for testing",
  "version": "1.0.0",
  "lastUpdated": "2024-01-01T00:00:00Z",
  
  "application": {
    "nodeEnv": "staging",
    "logLevel": "info",
    "port": 3000,
    "enableDebugLogs": false,
    "enableHotReload": false,
    "enableSourceMaps": true
  },

  "azure": {
    "region": "australiaeast",
    "resourceGroupName": "rg-grc-ai-platform-staging",
    "environment": "staging",
    "subscription": {
      "id": "your-staging-subscription-id",
      "name": "GRC AI Platform Staging"
    },
    "cosmosDb": {
      "accountName": "cosmos-grc-ai-staging",
      "databaseName": "grc-ai-platform-staging",
      "consistencyLevel": "Session",
      "enableMultipleWriteLocations": true
    },
    "keyVault": {
      "name": "kv-grc-ai-staging",
      "enableRbacAuthorization": true,
      "enablePurgeProtection": true
    },
    "storage": {
      "accountName": "stgrcaistaging",
      "tier": "Standard",
      "replication": "ZRS"
    },
    "appInsights": {
      "name": "ai-grc-ai-staging",
      "applicationType": "web",
      "samplingPercentage": 50
    }
  },

  "multiTenant": {
    "enableTenantIsolation": true,
    "defaultTier": "standard",
    "maxTenantsPerSubscription": 50,
    "enableAutoProvisioning": true,
    "tenantTimeoutMinutes": 60
  },

  "security": {
    "enableHelmetSecurity": true,
    "enableRateLimiting": true,
    "rateLimitWindowMs": 900000,
    "rateLimitMaxRequests": 500,
    "enableAuditLogs": true,
    "auditLogRetentionDays": 365,
    "cors": {
      "origins": [
        "https://staging.grc-ai-platform.com",
        "https://staging-admin.grc-ai-platform.com"
      ],
      "credentials": true
    }
  },

  "mcp": {
    "enableHealthChecks": true,
    "healthCheckIntervalMs": 300000,
    "serverTimeoutMs": 30000,
    "enableSignatureVerification": true,
    "rateLimitPerMinute": 500,
    "allowedOrigins": [
      "https://staging.grc-ai-platform.com"
    ]
  },

  "ai": {
    "defaultProvider": "azure-openai",
    "defaultModel": "gpt-4",
    "defaultMaxTokens": 4000,
    "defaultTemperature": 0.7,
    "enableContentFiltering": true,
    "enablePiiDetection": true,
    "enableUsageLogging": true
  },

  "caching": {
    "enableRedis": true,
    "defaultTtlSeconds": 600,
    "maxCacheSize": 5000,
    "redis": {
      "host": "redis-grc-ai-staging.redis.cache.windows.net",
      "port": 6380,
      "database": 0,
      "enableSsl": true
    }
  },

  "monitoring": {
    "enablePrometheusMetrics": true,
    "metricsPort": 9090,
    "enableOpenTelemetry": true,
    "enablePerformanceMonitoring": true,
    "slowQueryThresholdMs": 500,
    "memoryUsageThresholdPercent": 80
  },

  "testing": {
    "enableTestFixtures": true,
    "testTenantId": "test-tenant-staging",
    "enableMockServices": false,
    "testTimeoutMs": 60000
  },

  "features": {
    "enableNewTenantOnboarding": true,
    "enableAdvancedAnalytics": true,
    "enableMcpServerRegistry": true,
    "enableBulkOperations": true,
    "enableExperimentalFeatures": false
  },

  "integrations": {
    "webhook": {
      "timeoutMs": 30000,
      "retryAttempts": 3,
      "enableSignatureVerification": true
    },
    "externalApi": {
      "rateLimitPerMinute": 500,
      "timeoutMs": 30000
    }
  },

  "backup": {
    "enabled": true,
    "frequency": "daily",
    "retentionDays": 30
  }
}